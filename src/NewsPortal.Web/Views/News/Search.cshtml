@model NewsPortal.Web.ViewModels.SearchViewModel
@{
    ViewData["Title"] = $"Search: {Model.Query}";
}

<div class="mb-4">
    <h2><i class="bi bi-search me-2"></i>Search Results</h2>
    <p class="text-muted">Showing results for "<strong>@Model.Query</strong>"</p>
</div>

@if (Model.Results.Items.Any())
{
    <p class="text-muted mb-4">Found @Model.Results.TotalCount result(s)</p>

    <div class="row">
        @foreach (var news in Model.Results.Items)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="@(news.ThumbnailUrl ?? "/images/placeholder.jpg")"
                         class="card-img-top" style="height: 180px; object-fit: cover;" alt="@news.Title">
                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(news.CategoryName))
                        {
                            <span class="badge bg-primary mb-2">@news.CategoryName</span>
                        }
                        <h5 class="card-title">
                            <a href="/news/@news.Slug" class="text-decoration-none text-dark">@news.Title</a>
                        </h5>
                        <p class="card-text text-muted">@(news.Summary?.Length > 100 ? news.Summary.Substring(0, 100) + "..." : news.Summary)</p>
                    </div>
                    <div class="card-footer bg-white border-0">
                        <small class="text-muted">
                            <i class="bi bi-building me-1"></i>@news.SourceName
                            @if (news.PublishedAt.HasValue)
                            {
                                <span class="float-end"><i class="bi bi-clock me-1"></i>@news.PublishedAt.Value.ToString("dd MMM yyyy")</span>
                            }
                        </small>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (Model.Results.TotalPages > 1)
    {
        <nav aria-label="Page navigation" class="mt-4">
            <ul class="pagination justify-content-center">
                @if (Model.Results.HasPreviousPage)
                {
                    <li class="page-item">
                        <a class="page-link" href="?q=@Model.Query&page=@(Model.Results.Page - 1)">
                            <i class="bi bi-chevron-left"></i> Previous
                        </a>
                    </li>
                }

                @for (int i = 1; i <= Math.Min(Model.Results.TotalPages, 10); i++)
                {
                    <li class="page-item @(i == Model.Results.Page ? "active" : "")">
                        <a class="page-link" href="?q=@Model.Query&page=@i">@i</a>
                    </li>
                }

                @if (Model.Results.HasNextPage)
                {
                    <li class="page-item">
                        <a class="page-link" href="?q=@Model.Query&page=@(Model.Results.Page + 1)">
                            Next <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>
                }
            </ul>
        </nav>
    }
}
else
{
    <div class="alert alert-info text-center">
        <i class="bi bi-info-circle me-2"></i>No results found for "<strong>@Model.Query</strong>".
        <br>
        <a href="/" class="btn btn-primary mt-3">Back to Home</a>
    </div>
}
