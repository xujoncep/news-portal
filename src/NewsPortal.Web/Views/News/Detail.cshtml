@model NewsPortal.Web.ViewModels.NewsDetailViewModel
@{
    ViewData["Title"] = Model.Article.Title;
}

<div class="row">
    <div class="col-lg-8">
        <article>
            <header class="mb-4">
                @if (!string.IsNullOrEmpty(Model.Article.CategoryName))
                {
                    <a href="/category/@Model.Article.CategorySlug" class="badge bg-primary text-decoration-none mb-2">
                        @Model.Article.CategoryName
                    </a>
                }
                <h1 class="mb-3">@Model.Article.Title</h1>
                <div class="text-muted mb-3">
                    <span><i class="bi bi-building me-1"></i>@Model.Article.SourceName</span>
                    @if (!string.IsNullOrEmpty(Model.Article.Author))
                    {
                        <span class="ms-3"><i class="bi bi-person me-1"></i>@Model.Article.Author</span>
                    }
                    @if (Model.Article.PublishedAt.HasValue)
                    {
                        <span class="ms-3"><i class="bi bi-calendar me-1"></i>@Model.Article.PublishedAt.Value.ToString("dd MMMM yyyy, HH:mm")</span>
                    }
                    <span class="ms-3"><i class="bi bi-eye me-1"></i>@Model.Article.ViewCount views</span>
                </div>
            </header>

            @if (!string.IsNullOrEmpty(Model.Article.ImageUrl))
            {
                <figure class="mb-4">
                    <img src="@Model.Article.ImageUrl" alt="@Model.Article.Title" class="img-fluid rounded shadow">
                </figure>
            }

            @if (!string.IsNullOrEmpty(Model.Article.Summary))
            {
                <div class="lead mb-4 p-3 bg-light rounded">
                    @Model.Article.Summary
                </div>
            }

            <div class="article-content">
                @Html.Raw(Model.Article.Content)
            </div>

            <div class="mt-4 pt-4 border-top">
                <a href="@Model.Article.SourceUrl" target="_blank" rel="noopener" class="btn btn-outline-primary">
                    <i class="bi bi-box-arrow-up-right me-1"></i>Read Original Article
                </a>
            </div>
        </article>
    </div>

    <div class="col-lg-4">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <i class="bi bi-collection me-2"></i>Related News
            </div>
            <ul class="list-group list-group-flush">
                @foreach (var news in Model.RelatedNews)
                {
                    <li class="list-group-item">
                        <a href="/news/@news.Slug" class="text-decoration-none">
                            <div class="d-flex">
                                <img src="@(news.ThumbnailUrl ?? "/images/placeholder.jpg")"
                                     alt="@news.Title" class="me-3 rounded" style="width: 80px; height: 60px; object-fit: cover;">
                                <div>
                                    <h6 class="mb-1">@(news.Title.Length > 50 ? news.Title.Substring(0, 50) + "..." : news.Title)</h6>
                                    <small class="text-muted">
                                        @if (news.PublishedAt.HasValue)
                                        {
                                            @news.PublishedAt.Value.ToString("dd MMM yyyy")
                                        }
                                    </small>
                                </div>
                            </div>
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>
