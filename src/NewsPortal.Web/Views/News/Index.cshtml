@model NewsPortal.Web.ViewModels.NewsListViewModel
@{
    ViewData["Title"] = Model.Title ?? "All News";
}

<h2 class="mb-4"><i class="bi bi-newspaper me-2"></i>@(Model.Title ?? "All News")</h2>

<div class="row">
    @foreach (var news in Model.News.Items)
    {
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100 shadow-sm">
                <img src="@(news.ThumbnailUrl ?? "/images/placeholder.jpg")"
                     class="card-img-top" style="height: 180px; object-fit: cover;" alt="@news.Title">
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(news.CategoryName))
                    {
                        <span class="badge bg-primary mb-2">@news.CategoryName</span>
                    }
                    <h5 class="card-title">
                        <a href="/news/@news.Slug" class="text-decoration-none text-dark">@news.Title</a>
                    </h5>
                    <p class="card-text text-muted">@(news.Summary?.Length > 100 ? news.Summary.Substring(0, 100) + "..." : news.Summary)</p>
                </div>
                <div class="card-footer bg-white border-0">
                    <small class="text-muted">
                        <i class="bi bi-building me-1"></i>@news.SourceName
                        @if (news.PublishedAt.HasValue)
                        {
                            <span class="float-end"><i class="bi bi-clock me-1"></i>@news.PublishedAt.Value.ToString("dd MMM yyyy")</span>
                        }
                    </small>
                </div>
            </div>
        </div>
    }
</div>

@if (Model.News.TotalPages > 1)
{
    <nav aria-label="Page navigation" class="mt-4">
        <ul class="pagination justify-content-center">
            @if (Model.News.HasPreviousPage)
            {
                <li class="page-item">
                    <a class="page-link" href="?page=@(Model.News.Page - 1)">
                        <i class="bi bi-chevron-left"></i> Previous
                    </a>
                </li>
            }

            @for (int i = 1; i <= Model.News.TotalPages; i++)
            {
                <li class="page-item @(i == Model.News.Page ? "active" : "")">
                    <a class="page-link" href="?page=@i">@i</a>
                </li>
            }

            @if (Model.News.HasNextPage)
            {
                <li class="page-item">
                    <a class="page-link" href="?page=@(Model.News.Page + 1)">
                        Next <i class="bi bi-chevron-right"></i>
                    </a>
                </li>
            }
        </ul>
    </nav>
}

@if (!Model.News.Items.Any())
{
    <div class="alert alert-info text-center">
        <i class="bi bi-info-circle me-2"></i>No news articles found.
    </div>
}
