@model NewsPortal.Web.ViewModels.CategoryViewModel
@{
    ViewData["Title"] = Model.Category.Name;
}

<div class="mb-4 p-4 bg-light rounded">
    <h2><i class="bi bi-grid me-2"></i>@Model.Category.Name</h2>
    @if (!string.IsNullOrEmpty(Model.Category.Description))
    {
        <p class="text-muted mb-0">@Model.Category.Description</p>
    }
    <span class="badge bg-secondary">@Model.Category.ArticleCount articles</span>
</div>

<div class="row">
    @foreach (var news in Model.News.Items)
    {
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100 shadow-sm">
                <img src="@(news.ThumbnailUrl ?? "/images/placeholder.jpg")"
                     class="card-img-top" style="height: 180px; object-fit: cover;" alt="@news.Title">
                <div class="card-body">
                    <h5 class="card-title">
                        <a href="/news/@news.Slug" class="text-decoration-none text-dark">@news.Title</a>
                    </h5>
                    <p class="card-text text-muted">@(news.Summary?.Length > 100 ? news.Summary.Substring(0, 100) + "..." : news.Summary)</p>
                </div>
                <div class="card-footer bg-white border-0">
                    <small class="text-muted">
                        <i class="bi bi-building me-1"></i>@news.SourceName
                        @if (news.PublishedAt.HasValue)
                        {
                            <span class="float-end"><i class="bi bi-clock me-1"></i>@news.PublishedAt.Value.ToString("dd MMM yyyy")</span>
                        }
                    </small>
                </div>
            </div>
        </div>
    }
</div>

@if (Model.News.TotalPages > 1)
{
    <nav aria-label="Page navigation" class="mt-4">
        <ul class="pagination justify-content-center">
            @if (Model.News.HasPreviousPage)
            {
                <li class="page-item">
                    <a class="page-link" href="?page=@(Model.News.Page - 1)">
                        <i class="bi bi-chevron-left"></i> Previous
                    </a>
                </li>
            }

            @for (int i = 1; i <= Math.Min(Model.News.TotalPages, 10); i++)
            {
                <li class="page-item @(i == Model.News.Page ? "active" : "")">
                    <a class="page-link" href="?page=@i">@i</a>
                </li>
            }

            @if (Model.News.HasNextPage)
            {
                <li class="page-item">
                    <a class="page-link" href="?page=@(Model.News.Page + 1)">
                        Next <i class="bi bi-chevron-right"></i>
                    </a>
                </li>
            }
        </ul>
    </nav>
}
