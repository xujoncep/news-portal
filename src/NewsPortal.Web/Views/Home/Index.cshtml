@model NewsPortal.Web.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Home";
}

<!-- Featured News Carousel -->
@if (Model.FeaturedNews.Any())
{
    <div id="featuredCarousel" class="carousel slide mb-4" data-bs-ride="carousel">
        <div class="carousel-indicators">
            @for (int i = 0; i < Model.FeaturedNews.Count(); i++)
            {
                <button type="button" data-bs-target="#featuredCarousel" data-bs-slide-to="@i"
                        class="@(i == 0 ? "active" : "")" aria-current="@(i == 0 ? "true" : "false")"></button>
            }
        </div>
        <div class="carousel-inner rounded-3 shadow">
            @{ int index = 0; }
            @foreach (var news in Model.FeaturedNews)
            {
                <div class="carousel-item @(index == 0 ? "active" : "")" style="height: 400px;">
                    <img src="@(news.ThumbnailUrl ?? "/images/placeholder.jpg")" class="d-block w-100 h-100"
                         style="object-fit: cover;" alt="@news.Title">
                    <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-75 rounded p-3">
                        <h3><a href="/news/@news.Slug" class="text-white text-decoration-none">@news.Title</a></h3>
                        <p class="mb-0">
                            <small>
                                <i class="bi bi-building me-1"></i>@news.SourceName
                                @if (news.PublishedAt.HasValue)
                                {
                                    <span class="ms-2"><i class="bi bi-clock me-1"></i>@news.PublishedAt.Value.ToString("dd MMM yyyy")</span>
                                }
                            </small>
                        </p>
                    </div>
                </div>
                index++;
            }
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#featuredCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#featuredCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
}

<div class="row">
    <!-- Main Content -->
    <div class="col-lg-8">
        <h2 class="mb-4"><i class="bi bi-lightning me-2"></i>Latest News</h2>
        <div class="row">
            @foreach (var news in Model.LatestNews)
            {
                <div class="col-md-6 mb-4">
                    <div class="card h-100 shadow-sm">
                        <img src="@(news.ThumbnailUrl ?? "/images/placeholder.jpg")"
                             class="card-img-top" style="height: 180px; object-fit: cover;" alt="@news.Title">
                        <div class="card-body">
                            @if (!string.IsNullOrEmpty(news.CategoryName))
                            {
                                <span class="badge bg-primary mb-2">@news.CategoryName</span>
                            }
                            <h5 class="card-title">
                                <a href="/news/@news.Slug" class="text-decoration-none text-dark">@news.Title</a>
                            </h5>
                            <p class="card-text text-muted">@(news.Summary?.Length > 100 ? news.Summary.Substring(0, 100) + "..." : news.Summary)</p>
                        </div>
                        <div class="card-footer bg-white border-0">
                            <small class="text-muted">
                                <i class="bi bi-building me-1"></i>@news.SourceName
                                @if (news.PublishedAt.HasValue)
                                {
                                    <span class="float-end"><i class="bi bi-clock me-1"></i>@news.PublishedAt.Value.ToString("dd MMM")</span>
                                }
                            </small>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="text-center mt-3">
            <a href="/news" class="btn btn-outline-primary">
                <i class="bi bi-arrow-right me-1"></i>View All News
            </a>
        </div>
    </div>

    <!-- Sidebar -->
    <div class="col-lg-4">
        <!-- Categories -->
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-primary text-white">
                <i class="bi bi-grid me-2"></i>Categories
            </div>
            <ul class="list-group list-group-flush">
                @foreach (var category in Model.Categories)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <a href="/category/@category.Slug" class="text-decoration-none">
                            @if (!string.IsNullOrEmpty(category.Icon))
                            {
                                <i class="bi @category.Icon me-2"></i>
                            }
                            @category.Name
                        </a>
                        <span class="badge bg-secondary rounded-pill">@category.ArticleCount</span>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>
